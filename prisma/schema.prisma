generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Clients {
  id       Int        @id @default(autoincrement())
  email    String     @unique
  name     String
  products Products[]

  ProductsOnClients ProductsOnClients[]
}

model Products {
  id                Int                 @id @default(autoincrement())
  title             String
  content           String?
  clients           Clients[]
  ProductsOnClients ProductsOnClients[]
}

model ProductsOnClients {
  products   Products @relation(fields: [productsId], references: [id])
  productsId Int // relation scalar field (used in the `@relation` attribute above)
  clients    Clients  @relation(fields: [clientsId], references: [id])
  clientsId  Int // relation scalar field (used in the `@relation` attribute above)

  @@id([productsId, clientsId])
}
