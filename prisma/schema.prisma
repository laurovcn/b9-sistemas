generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Clients {
  id       Int            @id @default(autoincrement())
  email    String         @unique
  name     String
  products Transactions[]
}

model Products {
  id      Int            @id @default(autoincrement())
  title   String
  content String?
  clients Transactions[]
}

model Transactions {
  clientsId  Int      @map("clientsId")
  productsId Int      @map("productsId")
  products   Products @relation(fields: [productsId], references: [id])
  clients    Clients  @relation(fields: [clientsId], references: [id])


  @@id([productsId, clientsId])
  @@map("transactions")
}
