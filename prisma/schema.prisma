generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Clients {
  id           Int            @id @default(autoincrement())
  email        String
  name         String
  products     Products[]
  transactions Transactions[]
}

model Products {
  id           Int            @id @default(autoincrement())
  title        String
  quantity     Int            @default(100)
  clients      Clients[]
  transactions Transactions[]
}

model Transactions {
  products   Products @relation(fields: [productsId], references: [id])
  productsId Int
  clients    Clients  @relation(fields: [clientsId], references: [id])
  clientsId  Int

  @@id([productsId, clientsId])
}
